{% extends 'base.html.twig' %}

{% block title %}Edit Reclamation{% endblock %}
{% block stylesheets  %}
    {{ parent() }}

    <style>
        h1 {
            color: #377120;
            text-align: center;
        }

        /* Custom styles for the form */
        form {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #D1E2C4;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #555;
        }

        input,
        select,
        textarea {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .btn-group {
            text-align: center;
            margin-top: 20px; /* Adjust margin as needed */
        }

        /* Other button styles */
        button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #377120;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            text-align: center;
            margin-bottom: 10px;
            /* justify-content: center; - Not needed for buttons */
        }

        a {
            color: #377120;
            text-decoration: none;
            display: block;
            text-align: center;
        }
        button:hover,
        a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock stylesheets  %}

{% block body %}
    <h1>Edit Reclamation</h1>



    <div class="btn-group"> <!-- Change the class to btn-group -->
        {{ include('reclamation/_form.html.twig', {'button_label': 'Update'}) }}
        <a href="{{ path('app_reclamation_index') }}">Back to List</a>

        {{ include('reclamation/_delete_form.html.twig') }}
    </div>
{% endblock %}
